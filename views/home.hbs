<div class="container">
  <h2 class="center-align">Today's Featured Artist</h2>
    <div class="divider"></div>
    <div class="section">
      <div class="responsive-img hoverable" id="featured">
        {{#each artist.item}}
        <img src="{{this.dataValues.url}}" 
        title="{{this.dataValues.title}}">
        <div class="right" id="nameBox">
          <p id="artistName">Artist Name: {{this.dataValues.artistName}}</p>
          {{/each}}

          {{#each event}}
          <p>Sale:{{this.dataValues.endDate}}</p>
          {{/each}}
          {{#each artist.item}}
        </div> 
         <a href="./api/items/:{{this.dataValues.artistId}}" class="prodLink">Visit product page</a>
        {{/each}}
      </div>
    </div>

    <div class="divider"></div>
    <div class="section">
      <h3>Recently Featured Artists</h3>
      <div class="row" id="recentArt">
        {{#each artist.item}}
        <div class="col s3" id ="cardOne">
