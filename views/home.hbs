                src="{{this.dataValues.url}}"
                alt="{{this.dataValues.title}}">
              <span class="card-title">{{this.dataValues.title}}</span>
            </div>
            <div class="card-content">
              <p>{{this.dataValues.artistName}}</p>
            </div>
            <div class="card-action">
            </div>
          </div>
        </div>
        <div class="col s3" id ="cardTwo">
          <div class="card hoverable">
