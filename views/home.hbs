                src="{{this.dataValues.url}}"
                alt="{{this.dataValues.title}}">
              <span class="card-title">Artwork Title:{{this.dataValues.title}}</span>
            </div>
            <div class="card-content">
              <p>Artist Name:{{this.dataValues.artistName}}</p>
            </div>
            <div class="card-action">
              <a href="/api/items/:{{this.dataValues.artistId}}"></a>
            </div>
          </div>
        </div>
        <div class="col s3" id ="cardThree">
          <div class="card hoverable">
